{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": ["bun"],
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
