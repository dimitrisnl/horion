    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "resend": "^4.6.0",
    "ua-parser-js": "^2.0.4",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.4",
    "@horionos/eslint-config": "workspace:*",
    "@types/bun": "^1.2.18",
    "@types/pg": "^8.15.4",
    "bun-types": "latest",
